# DocuSync Environment Configuration
# Copy this file to .env and update values for your environment

# ============================================
# Server Configuration
# ============================================
# Host to bind to (0.0.0.0 for Docker/server, 127.0.0.1 for local)
HOST=0.0.0.0

# Port to run the server on
PORT=8000

# API base URL (optional, for Docker/proxy setups)
# Local: http://localhost:8000
# Docker: http://localhost:8000 (or your domain)
# Production: https://yourdomain.com
API_URL=http://localhost:8000

# Frontend URL for CORS (optional, if frontend is separate)
# FRONTEND_URL=http://localhost:3000

# Environment: development or production
ENVIRONMENT=development

# ============================================
# Database Configuration
# ============================================
# SQLite (default, local development)
DATABASE_URL=sqlite:///docu_sync.db

# PostgreSQL (for Docker/production)
# Uncomment and configure these for PostgreSQL:
# DB_HOST=db
# DB_PORT=5432
# DB_NAME=docu_sync
# DB_USER=docu_sync_user
# DB_PASSWORD=docu_sync_password
# Or use full DATABASE_URL:
# DATABASE_URL=postgresql://docu_sync_user:docu_sync_password@db:5432/docu_sync

# ============================================
# Database Cleanup Schedule
# ============================================
# Format: 'HH:MM' for daily (e.g., '02:00' for 2 AM)
# Or '*/N' for every N hours (e.g., '*/6' for every 6 hours)
CLEANUP_SCHEDULE=02:00

# Enable/disable cleanup
CLEANUP_ENABLED=true

# Retention period in days (keep activity logs for N days)
CLEANUP_RETENTION_DAYS=90

# ============================================
# Security Settings
# ============================================
# JWT secret key (CHANGE THIS IN PRODUCTION!)
# Generate a new one: python -c 'import secrets; print(secrets.token_hex(32))'
SECRET_KEY=09d25e094faa6ca2556c818166b7a9563b93f7099f6f0f4caa6cf63b88e8d3e7

# JWT algorithm
ALGORITHM=HS256

# Access token expiration (minutes)
ACCESS_TOKEN_EXPIRE_MINUTES=30

# ============================================
# Application Settings
# ============================================
# Maximum file size in MB
MAX_FILE_SIZE_MB=100

# Enable full-text search
ENABLE_FULLTEXT_SEARCH=true

# ============================================
# Default User (created on first startup)
# ============================================
# CHANGE THESE IN PRODUCTION!
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=admin

# ============================================
# Docker-specific Notes
# ============================================
# When running in Docker:
# - Set HOST=0.0.0.0 to allow external connections
# - Use service names for database URLs (e.g., db:5432)
# - Update API_URL to match your Docker host/domain
# - Use PostgreSQL for production deployments
